<form id="formVuelos">
  <div class="form-group">
    <label for="numVuelo">Numero de Vuelo</label>
    <input type="text" class="form-control" id="numVuelo" name="numVuelo" aria-describedby="emailHelp" placeholder="Ingresa el numero de vuelo">
    <small id="emailHelp" class="form-text text-muted">Ingresa el numero de vuelo si es que lo sabes.</small>
  </div>
  <div class="form-group">
    <label for="operacion">Operación</label>
    <select class="form-control" id="operacion" name="operacion">
      <option disabled selected="selected">Selecciona una operación</option>
      <option>Arribo</option>
      <option>Partida</option>
    </select>
  </div>
  <div class="form-group">
    <label for="ciudad">Ciudad</label>
    <input type="text" class="form-control" id="ciudad" name="ciudad" placeholder="Ingrese la Ciudad">
  </div>
  <div class="modal-footer">
    <div class="primary-button">
      <a id="botonVuelos" href="#" data-toggle="modal" data-target="#modalVuelos">Buscar Vuelos</a>
    </div>
    <a  hidden id="botonVuelos0" href="#" data-toggle="modal" data-target="#modalVuelos0">Busca</a>
    <div class="primary-button">
      <a href="#services">Volver al Menu</a>
    </div>
  </div>
</form>
